{
  "name": "ai-trading-interface",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:prod": "tsc && vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:integration": "tsx src/test/integration/runIntegrationTests.ts",
    "test:integration:mcp": "tsx src/test/integration/runIntegrationTests.ts --service=mcp",
    "test:integration:rag": "tsx src/test/integration/runIntegrationTests.ts --service=rag",
    "test:integration:ws": "tsx src/test/integration/runIntegrationTests.ts --service=ws",
    "test:performance": "vitest --run src/test/performance",
    "test:accessibility": "vitest --run src/test/accessibility",
    "test:all": "npm run test && npm run test:performance && npm run test:accessibility",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:debug": "tauri build --debug",
    "build:desktop": "npm run build:prod && tauri build",
    "build:desktop:debug": "npm run build:prod && tauri build --debug",
    "dev:desktop": "tauri dev",
    "prebuild": "npm run lint && npm run type-check && npm run test:all",
    "postbuild": "echo 'Build completed successfully'",
    "build:pipeline": "node scripts/build-pipeline.js",
    "build:pipeline:prod": "node scripts/build-pipeline.js --environment production --target desktop",
    "build:pipeline:staging": "node scripts/build-pipeline.js --environment staging --target desktop",
    "setup:signing": "node scripts/code-signing.js setup",
    "create:distribution": "node scripts/distribution.js --environment production",
    "release": "npm run build:pipeline:prod && npm run create:distribution"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@monaco-editor/react": "^4.7.0",
    "@tauri-apps/api": "^2.7.0",
    "@types/react-beautiful-dnd": "^13.1.8",
    "clsx": "^2.0.0",
    "monaco-editor": "^0.52.2",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@tauri-apps/cli": "^2.7.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.2.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "axe-core": "^4.10.3",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^26.1.0",
    "msw": "^2.10.4",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^3.2.4"
  }
}
